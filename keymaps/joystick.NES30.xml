<keymap>
  <global>
    <joystick>
      <a>Select</a>
      <b>Back</b>
      <x>FullScreen</x>
      <y>ContextMenu</y>

      <leftbumper>PageUp</leftbumper>
      <rightbumper>PageDown</rightbumper>
    </joystick>
  </global>
  <MyVideos>
    <joystick>
      <x>ToggleWatched</x>
    </joystick>
  </MyVideos>
  <FullscreenVideo>
    <joystick>
      <a>Pause</a>
      <b>Stop</b>
      <y>AudioNextLanguage</y>
      <x>ShowSubtitles</x>

      <leftbumper>Seek(-4)</leftbumper>
      <rightbumper>Seek(4)</rightbumper>

      <back>Info</back>
      <start>OSD</start>
    </joystick>
  </FullscreenVideo>
  <VideoOSD>
    <joystick>
      <start>OSD</start>
      <leftbumper>LIRC.Send(SEND_ONCE SMSL_RC36 DOWN)</leftbumper>
      <rightbumper>LIRC.Send(SEND_ONCE SMSL_RC36 UP)</rightbumper>
    </joystick>
  </VideoOSD>
  <FullscreenInfo>
    <joystick>
      <a>Pause</a>
      <b>Back</b>
      <back>Info</back>
      <start>OSD</start>
      <leftbumper>LIRC.Send(SEND_ONCE SMSL_RC36 DOWN)</leftbumper>
      <rightbumper>LIRC.Send(SEND_ONCE SMSL_RC36 UP)</rightbumper>
    </joystick>
  </FullscreenInfo>
</keymap>
